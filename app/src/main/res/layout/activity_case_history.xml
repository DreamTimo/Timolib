<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_qian"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_66"
        titlebar:centerText="@string/case_hitory"
        titlebar:centerTextColor="@color/white"
        titlebar:centerType="textView"
        titlebar:fillStatusBar="true"
        titlebar:leftImageResource="@mipmap/back"
        titlebar:leftType="imageButton"
        titlebar:rightText="申请复印"
        titlebar:rightTextColor="@color/white"
        titlebar:rightType="textView"
        titlebar:statusBarColor="@color/color_007"
        titlebar:titleBarColor="@color/color_007"
        titlebar:titleBarHeight="@dimen/image_65" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_40"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/image_25"
                android:paddingRight="@dimen/image_25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前就诊人："
                    android:textColor="@color/alphablack"
                    android:textSize="@dimen/type_14sp" />

                <TextView
                    android:id="@+id/check_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刘刚强"
                    android:textColor="@color/color_007"
                    android:textSize="@dimen/type_14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/blood_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/personqiehuan"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="切换就诊人"
                        android:textColor="@color/color_007"
                        android:textSize="@dimen/type_12sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_40"
                android:layout_marginTop="@dimen/image_5"
                android:background="@color/color_deeaee"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/image_25"
                android:paddingRight="@dimen/image_25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号："
                    android:textColor="@color/alphablack"
                    android:textSize="@dimen/type_12sp" />

                <TextView
                    android:id="@+id/tv_idnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="141034199701120063"
                    android:textColor="@color/color_007"
                    android:textSize="@dimen/type_12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="病案号："
                        android:textColor="@color/alphablack"
                        android:textSize="@dimen/type_12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1234567"
                        android:textColor="@color/color_007"
                        android:textSize="@dimen/type_12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/case_lianjie" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/case_lianjie" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/image_25"
        android:layout_marginRight="@dimen/image_25"
        android:layout_marginTop="@dimen/image_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:src="@mipmap/line_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/image_4"
            android:text="病案复印记录"
            android:textColor="@color/oder_black"
            android:textSize="@dimen/type_15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_no_case"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/img_10"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/case_no_history" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:text="您目前还没有复印记录哦~"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/type_12sp" />
    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/xrv_case_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
